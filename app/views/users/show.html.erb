<% breadcrumb :users_show %>

<div class="contents row">

  <% @user.each do |user| %>

    <h3><%= user.name %>さんのマイページ</h3>

    <% unless user_signed_in? && current_user.id == user.id %>
      <div class="mail-link">
        <%= mail_to user.email, "#{user.name}さんへメールを送る" %>
      </div>
    <% end %>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">名前</label>
      </div>
      <%= user.name %>
    </div>

    <% if user_signed_in? && current_user.id == user.id %>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">メールアドレス</label>
        </div>
        <%= user.email %>
      </div>
    <% end %>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">生年月日</label>
      </div>
      <div class='input-birth-wrap'>
        <%= user.birth_date %>
      </div>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">所属部署</label>
      </div>
      <%= user.department %>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">役職</label>
      </div>
      <%= user.position %>
    </div>

  

    <% if user_signed_in? && current_user.id == user.id %>
      <%= link_to "ユーザー情報変更", edit_user_registration_path, class: "post" %>
    <% end %>

  <% end %>

  <%= month_calendar events: @schedules do |date, schedules| %>
    <%= date.day %>

    <% schedules.each do |schedule| %>
      <li>
        <%= link_to schedule.title, schedule_path(schedule.user.id), method: :get %>
        <div>
          (<%= link_to schedule.user.name, user_path(schedule.user.id), method: :get %>)
        </div>
      </li>
    <% end %>
  <% end %>

</div>