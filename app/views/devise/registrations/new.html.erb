<% breadcrumb :registrations_new %>

<div class="container">
  <%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
    <div class='form-header'>
      <h3 class='form-header-text'>
        会員情報を入力してください
      </h3>
    </div>
    <%= render 'devise/shared/error_messages', model: f.object %> 
    <form class="row g-3">
      <div class="content">
        <label for="user_name" class="form-label">名前（必須）</label>
        <%= f.text_area :name, class: "form-control", id: "user_name", placeholder:"例) 田中太郎", maxlength:"40" %>
      </div>
      <div class="content">
        <label for="telephone_number" class="form-label">電話番号（必須）</label>
        <%= f.text_field :telephone_number, class: "form-control", id: "telephone_number", placeholder:"例）09012345678",maxlength:"11"%>
      </div>
      <div class="content">
        <label for="mail_address" class="form-label">メールアドレス（必須）</label>
        <%= f.email_field :email, class: "form-control", id: "mail_address", placeholder:"PC・携帯どちらでも可", autofocus: true %>
      </div>
      <div class="content">
        <label for="inputPassword4" class="form-label">パスワード（必須）</label>
        <%= f.password_field :password, class: "form-control", id: "inputPassword4", placeholder:"6文字以上の半角英数字" %>
      </div>
      <div class="content">
        <label for="password_confirmation" class="form-label">パスワード確認（必須）</label>
        <%= f.password_field :password_confirmation, class: "form-control", id: "password_confirmation", placeholder:"同じパスワードを入力して下さい" %>
      </div>
      <div class="content">
        <label for="birth_date" class="form-label">生年月日（必須）</label>
        <div class='input-birth-wrap'>
          <%= raw sprintf(
                      f.date_select(
                        :birth_date,
                        class:'select-birth',
                        id:"birth_date",
                        use_month_numbers: true,
                        prompt:'--',
                        start_year: 1930,
                        end_year: (Time.now.year - 5),
                        date_separator: '%s'),
                      "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
        </div>
      </div>
      <div class="content">
        <label for="department" class="form-label">所属部署（任意）</label>
        <%= f.text_area :department, class: "form-control", id: "department", placeholder:"例) 総務部", maxlength:"40" %>
      </div>
      <div class="content">
        <label for="position" class="form-label">役職（任意）</label>
        <%= f.text_area :position, class: "form-control", id: "position", placeholder:"例) 課長", maxlength:"40" %>
      </div>
      <div class="col-12">
        <%= f.submit "ユーザー登録", class: "btn btn-outline-dark" %>
      </div>
    </form>
  <% end %>
</div>