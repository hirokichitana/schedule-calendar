<% breadcrumb :sessions_new %>

<div class="container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mb-3">
      <div class="content">
        <label for="email" class="form-label">メールアドレス</label>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "email" %>
      </div>
      <div class="content">
        <label for="password" class="form-label">パスワード</label>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control", id: "password" %>
      </div>
      <div class="col-12">
        <%= f.submit "ログイン" ,class: "btn btn-outline-dark" %>
      </div>
    </div>
  <% end %>
</div>